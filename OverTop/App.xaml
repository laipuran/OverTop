<Application x:Class="OverTop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OverTop"
             StartupUri="/MainWindow.xaml" Startup="Application_Startup"
             ShutdownMode="OnExplicitShutdown" Exit="Application_Exit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PuranLai.Tools;component/Resources/StyleDictionary.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/PuranLai.Tools;component/Resources/ControlTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
