<Window x:Class="OverTop.FunctionalWindows.SelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverTop.ContentWindows"
        mc:Ignorable="d" KeyDown="Window_KeyDown"
        Title="选择窗口" Height="400" Width="250"
        Topmost="True" ShowInTaskbar="False"
        Background="#3c3c3c" Icon="/Resources/Icons/icon.png"
        WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <ScrollViewer>
        <StackPanel x:Name="ContentStackPanel" Margin="5,5,5,5"
                    HorizontalAlignment="Left">
            <Button x:Name="AddButton"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="AddButton_Click"
                    Content="选取文件"
                    Width="100" Margin="5,0,0,5"/>
        </StackPanel>
    </ScrollViewer>
</Window>
