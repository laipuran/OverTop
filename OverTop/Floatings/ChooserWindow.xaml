<Window x:Class="OverTop.Floatings.ChooserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverTop.Floatings"
        mc:Ignorable="d"
        Title="选择窗口" Height="400" Width="250"
        Topmost="True" ShowInTaskbar="False">
    <ScrollViewer>
        <StackPanel x:Name="ContentStackPanel" Margin="5,5,5,5"
                    HorizontalAlignment="Left">
            <Button x:Name="AddButton"
                    Style="{StaticResource ContentButtonStyle}"
                    Click="AddButton_Click"
                    Content="选取文件"
                    Width="100"/>
        </StackPanel>
    </ScrollViewer>
</Window>
