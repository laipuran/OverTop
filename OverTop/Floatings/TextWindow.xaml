<Window x:Class="OverTop.Floatings.TextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverTop.Floatings"
        mc:Ignorable="d"
        Title="Over Top"
        Width="180"
        Height="200"
        Background="#3c3c3c"
        Loaded="Window_Loaded"
        LostFocus="Window_LostFocus"
        Topmost="True">
    <ScrollViewer
        HorizontalScrollBarVisibility="Hidden"
        VerticalScrollBarVisibility="Auto">
        <StackPanel
            Orientation="Vertical"
            VerticalAlignment="Top"
            Margin="5,5,5,5">
            <TextBlock
                x:Name="TipTextBlock"
                Style="{StaticResource ContentTextBlockStyle}"/>
            <TextBox
                Height="80"
                Margin="0,10,0,0"
                x:Name="ContentTextBox"
                Style="{StaticResource ContentTextBoxStyle}"/>
            <Button
                Margin="0,10,0,0"
                x:Name="OKButton"
                Content="OK"
                Click="OKButton_Click"
                Style="{StaticResource ContentButtonStyle}"/>
        </StackPanel>
    </ScrollViewer>
</Window>
