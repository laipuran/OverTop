<Page x:Class="OverTop.Pages.FloatingPanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OverTop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FloatingPanelPage"
      DragDrop.Drop="Page_Drop"
      AllowDrop="True">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" >
        <!--<Button Style="{StaticResource ContentButtonStyle}"
                Content="关闭全部"
                x:Name="CloseButton"
                Click="CloseButton_Click"
                Margin="20,0,0,0"
                HorizontalAlignment="Left"/>-->
        <StackPanel Style="{StaticResource ContentStackPanelStyle}" Margin="0,20,0,0">
            <TextBlock Text="创建一个 便利贴 窗口："
                       Style="{StaticResource ContentTextBlockStyle}"/>
            <Button Content="＋" x:Name="HangerWindowButton"
                    FontSize="20" Height="40"
                    Style="{StaticResource ContentButtonStyle}"
                    Click="HangerWindowButton_Click">
                <Button.ToolTip>
                    <StackPanel>
                        <TextBlock>实例窗口</TextBlock>
                        <Image x:Name="HangerToolTipImage"/>
                    </StackPanel>
                </Button.ToolTip>
            </Button>
            <Button Content="从文件导入" x:Name="ImportButton"
                    Style="{StaticResource ContentButtonStyle}"
                    Click="ImportButton_Click"
                    Margin="10,0,0,0"/>
        </StackPanel>
        
        <StackPanel Style="{StaticResource ContentStackPanelStyle}" Margin="0,20,0,0">
            <TextBlock Text="创建一个 最近 窗口："
                       Style="{StaticResource ContentTextBlockStyle}"/>
            <Button Content="+" x:Name="RecentWindowButton"
                    FontSize="20" Height="40"
                    Style="{StaticResource ContentButtonStyle}"
                    Click="RecentWindowButton_Click">
                <Button.ToolTip>
                    <StackPanel>
                        <TextBlock>实例窗口</TextBlock>
                        <Image x:Name="RecentToolTipImage"/>
                    </StackPanel>
                </Button.ToolTip>
            </Button>
        </StackPanel>

        <StackPanel Style="{StaticResource ContentStackPanelStyle}" Margin="0,20,0,0">
            <TextBlock Text="打开 天气 窗口："
                       Style="{StaticResource ContentTextBlockStyle}"/>
            <Button Content="打开" x:Name="WeatherWindowButton"
                    Style="{StaticResource ContentButtonStyle}"
                    Click="WeatherWindowButton_Click"/>
        </StackPanel>

    </StackPanel>
</Page>
